# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()

# recipes page
GET        /recipes/            controllers.RecipeController.list()
GET        /json/recipes/   controllers.RecipeJsonController.list()
# GET         /products             controllers.RecipeController.list()
# GET         /products/:ean        controllers.RecipeController.details(ean: String)
# GET         /products/new         controllers.RecipeController.newProduct()
# POST        /products/            controllers.RecipeController.save()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
