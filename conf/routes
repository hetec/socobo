# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()

# recipes page
GET        /recipes            controllers.RecipeController.list()
GET        /json/recipes       controllers.RecipeJsonController.list()

GET       /:userId/fridge      controllers.FridgeController.fridge(userId)


GET       /dev/produce          controllers.FridgeController.addProduce()
GET       /produce              controllers.FridgeController.listProduce()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
